 <form method="POST" action="/landmarks">
 	<label>Name: </label><input type="text" name="landmark[name]" id="landmark_name">
 	<label>Year Completed: </label>
 		<input type="text" name="landmark[year_completed]" id="landmark_year_completed">
 	

 	<label>Figure: </label>
 		<select name="landmark[figure_id]" id="landmark_figure_id">
 			<% @figures.each do |figure|%>
	 			<option value="<%=figure.id%>" >
	 				<%= figure.name %>
	 			</option>
 			<% end %>
 		</select>
 	<input type="submit" name="submit" value="Submit" id="Create New Landmark">
 </form>
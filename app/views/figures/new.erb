 <form method="POST" action="/figures">
 	<label>Name: </label><input type="text" name="figure[name]" id="figure_name">
 	<label>Title: </label>
 		<ul><% @titles.each do |title| %>
 			<li><input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%></option></li>
 		<% end %> 
 		<li>Other: <input type="text" name="title[name]" id="new_title"></li>
 		</ul>
 	

 	<label>Landmark: </label>
 		<ul><% @landmarks.each do |landmark| %>
 			<li><input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%></option></li>
 		<% end %>
 		<li>Other: <input type="text" name="landmark[name]" id="new_landmark"><input type="text" name="landmark[year_completed]"></li>
 		</ul>
 	<input type="submit" name="submit" value="Submit" id="Create New Figure">
 </form>